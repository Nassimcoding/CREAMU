<!-- 商品預覽 JS -->
<script>
    $(function () {
        $('.btn').click(function () {
            var productId = $(this).data('product-id');

            $.ajax({
                url: '/ProductM/ProductDetail',
                type: 'GET',
                data: { id: productId },
                success: function (result) {
                    let html = '<div class="modal-body">';
                    html += '<div class="row">';
                    html += '<div class="col-md-6 col-sm-6 col-12">';
                    html += '<div class="modal-image">';
                    //商品圖
                    html += '<img class="img-fluid" src="/images/' + result.imageUrl + '" alt="product-img" style="max-width: 100%; height: auto; margin-top:15px;">';
                    html += '</div>';
                    html += '</div>';
                    html += '<div class="col-md-6 col-sm-6 col-12">';
                    html += '<div class="product-short-details">';
                    //名稱
