@model FinalProject.Data.Message

@{
    ViewData["Title"] = "AddNewMessage";
}
<link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />

    <link href="~/css/reset.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/css/common.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/css/swiper.css" rel="stylesheet" type="text/css" />
<link href="~/css/top_pages.css" rel="stylesheet" type="text/css" media="all" />

<h1>Message</h1>

<h4>Add New Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewMessage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MessageId" class="control-label"></label>
                <input asp-for="MessageId" class="form-control" value = "@ViewData["MessageId"]" readonly/>
                <span asp-validation-for="MessageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select asp-for="MemberId" class ="form-control" asp-items="ViewBag.MemberId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" value="5" type="number" step="1" min="0" max="5" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MessageTime" class="control-label"></label>
                <input  class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="MessageTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplyTime" class="control-label"></label>
                <input class="form-control" value="@DateTime.Now"/>
                <span asp-validation-for="ReplyTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MessageContext" class="control-label"></label>
                <input asp-for="MessageContext" class="form-control" />
                <span asp-validation-for="MessageContext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplyContext" class="control-label"></label>
                <input asp-for="ReplyContext" class="form-control" />
                <span asp-validation-for="ReplyContext" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsReply" /> @Html.DisplayNameFor(model => model.IsReply)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsShow" /> @Html.DisplayNameFor(model => model.IsShow)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add New Message" class="btn btn-primary" />
                <a asp-action="MessageList" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}