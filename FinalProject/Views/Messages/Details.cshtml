@model FinalProject.Data.Message

@{
    ViewData["Title"] = "Details";
}
<link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />

    <link href="~/css/reset.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/css/common.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/css/swiper.css" rel="stylesheet" type="text/css" />
<link href="~/css/top_pages.css" rel="stylesheet" type="text/css" media="all" />

<br />
<br />
<br />
<br />
<br />
<h1>Message</h1>
<h4>Details</h4>
<br />
<div>

    <dl class="row">
        <dd>Member</dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Member)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Member.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MessageTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MessageTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MessageContext)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MessageContext)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @{
                            if (Model.Image !=null && Model.Image.ToString() !="NULL")
                            {
                                <img src="~/imgs/messageImg/@Model.Image" width="400"/>
                            }
                            else
                            {
                                <img src="~/imgs/messageImg/noPhoto.jpg" width="400" />
                            }
                        }
        </dd>
        <dd>Employee</dd>
        <hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReplyTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReplyTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReplyContext)
        </dt>
        <dd class = "col-sm-10">
            <div class="text-break overflow-y-auto">
                @Html.DisplayFor(model => model.ReplyContext)
            </div>
        </dd>
        <hr />

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsReply)
        </dt>
        <dd class = "col-sm-4">
            @Html.DisplayFor(model => model.IsReply)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsShow)
        </dt>
        <dd class = "col-sm-4">
            @Html.DisplayFor(model => model.IsShow)
        </dd>
        <hr />
        

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MessageId" class="btn btn-primary">Edit</a> |
    <a asp-action="MessageList" class="btn btn-outline-primary">Back to List</a>
</div>
