@model FinalProject.Data.Message

@{
    ViewData["Title"] = "Edit";
}
<link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />

    <link href="~/css/reset.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/css/common.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/css/swiper.css" rel="stylesheet" type="text/css" />
<link href="~/css/top_pages.css" rel="stylesheet" type="text/css" media="all" />

<h1>Message</h1>

<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MessageId" /><!--MessageID-->
            <!--Member context-->
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <input  class="form-control" value="@ViewData["MemberId"]" readonly />
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MessageTime" class="control-label"></label>
                <input asp-for="MessageTime" class="form-control" />
                <span asp-validation-for="MessageTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MessageContext" class="control-label"></label>
                <textarea asp-for="MessageContext" class="form-control text-break overflow-y-auto" rows="10"></textarea>
                <span asp-validation-for="MessageContext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label><!--標題文字-->
                <input asp-for="Score" class="form-control" type="number" step="1" min="0" max="5" /><!--輸入內容，type是只能輸入的類型，但不做好向下一行也有同效果? step=1用於限制只能填入整數；min&max限制最大與最小值-->
                <span asp-validation-for="Score" class="text-danger"></span><!--限制填入的內容，若錯誤就會跳警告-->
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            </form>
        </div>
        <div class="col-md-6">
            <form asp-action="Edit">
            <!--Employee Replay-->
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId">
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplyTime" class="control-label"></label>
                <input asp-for="ReplyTime" class="form-control" />
                <span asp-validation-for="ReplyTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplyContext" class="control-label"></label>
                <textarea asp-for="ReplyContext" class="form-control text-break overflow-y-auto" rows="10" ></textarea>
                <span asp-validation-for="ReplyContext" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsReply" /> @Html.DisplayNameFor(model => model.IsReply)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsShow" /> @Html.DisplayNameFor(model => model.IsShow)
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> | 
                <a asp-action="MessageList" class="btn btn-outline-primary">Back to List</a>
            </div>
            </form>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
